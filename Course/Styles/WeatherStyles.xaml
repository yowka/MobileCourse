<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Style x:Key="WeatherBlockStyle" TargetType="Border">
        <Setter Property="BackgroundColor" Value="#14FFFFFF"/>
        <Setter Property="StrokeThickness" Value="0"/>
        <Setter Property="Padding" Value="12,10"/>
        <Setter Property="StrokeShape">
            <Setter.Value>
                <RoundRectangle CornerRadius="12"/>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="WeatherBlockTitleStyle" TargetType="Label">
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="TextColor" Value="LightGray"/>
        <Setter Property="HorizontalOptions" Value="Start"/>
    </Style>

    <Style x:Key="WeatherBlockValueStyle" TargetType="Label">
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="TextColor" Value="White"/>
        <Setter Property="HorizontalTextAlignment" Value="End"/>
        <Setter Property="Margin" Value="0,10,0,0"/>
    </Style>

    <Style x:Key="WeatherBlockLayoutStyle" TargetType="VerticalStackLayout">
        <Setter Property="Spacing" Value="5"/>
    </Style>

</ResourceDictionary>